<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FashionDetail">

    <ImageView
            android:src="@drawable/w1"
            android:layout_width="224dp"
            android:layout_height="222dp"
            android:id="@+id/ivFashionImage" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="114dp"
            android:layout_height="42dp"
            android:id="@+id/tvName" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFashionImage" android:layout_marginTop="92dp"
            android:textSize="18sp" android:textColor="#00030303" android:textStyle="bold|italic"
            app:layout_constraintHorizontal_bias="0.54"/>
    <TextView
            android:text="TextView"
            android:layout_width="247dp"
            android:layout_height="75dp" android:id="@+id/tvDetails" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/tvName" android:layout_marginTop="152dp"
            app:layout_constraintHorizontal_bias="0.581"/>
</android.support.constraint.ConstraintLayout>